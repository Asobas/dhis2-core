<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "validationrulegroup">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.validation.ValidationRuleGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="validationrulegroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="translations" type="jblTranslations"/>

    <property name="description" type="text" />

    <set name="members" table="validationrulegroupmembers">
      <cache usage="read-write" />
      <key column="validationgroupid" foreign-key="fk_validationrulegroupmembers_validationrulegroupid" />
      <many-to-many class="org.hisp.dhis.validation.ValidationRule" column="validationruleid"
                    foreign-key="fk_validationrulegroup_validationruleid" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_validationrulegroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="validationrulegroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="validationrulegroupid" foreign-key="fk_validationrulegroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_validationrulegroup">
            <column name="usergroupaccessid" unique-key="uk_validationrulegroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="validationrulegroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="validationrulegroupid" foreign-key="fk_validationrulegroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_validationrulegroup">
            <column name="useraccessid" unique-key="uk_validationrulegroup_useraccessid"/>
 </many-to-many>
    </set>

    <!-- Dynamic attribute values -->

   <set name="attributeValues" table="validationrulegroupattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="validationrulegroupid" foreign-key="fk_validationrulegroup_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_validationrulegroup">
       <column name="attributevalueid" unique-key="uk_validationrulegroup_attributevalue"/>
     </many-to-many>
    </set>

  </class>

</hibernate-mapping>
