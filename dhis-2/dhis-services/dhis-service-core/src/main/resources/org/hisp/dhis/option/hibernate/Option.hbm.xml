<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "optionvalue">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.option.Option" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="optionvalueid">
      <generator class="native" />
    </id>

    <property name="uid" column="uid" unique-key="uk_uid_&tablename;" length="11" not-null="true" />

    <property name="code" column="code" not-null="true" unique="false" length="230" />

    <property name="name" column="name" not-null="true" length="230" />

    <property name="created" type="timestamp" not-null="true" />

    <property name="lastUpdated" type="timestamp" not-null="true" />

    <property name="sortOrder" column="sort_order" />

    <property name="description" type="text" />

    <property name="formName" type="text" />

    <property name="style" type="jbObjectStyle" column="style" />

    <property name="translations" type="jblTranslations"/>

    <many-to-one name="optionSet" class="org.hisp.dhis.option.OptionSet" column="optionsetid" />

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="optionattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optionvalueid" foreign-key="fk_option_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_option">
       <column name="attributevalueid" unique-key="uk_option_attributevalue"/>
     </many-to-many>
    </set>

  </class>

</hibernate-mapping>
