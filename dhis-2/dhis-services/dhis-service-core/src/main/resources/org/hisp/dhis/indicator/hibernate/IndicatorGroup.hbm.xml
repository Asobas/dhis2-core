<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "indicatorgroup">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.indicator.IndicatorGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="indicatorgroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="false" length="230" />

    <property name="translations" type="jblTranslations"/>

    <set name="members" table="indicatorgroupmembers">
      <cache usage="read-write" />
      <key column="indicatorgroupid" foreign-key="fk_indicatorgroupmembers_indicatorgroupid" />
      <many-to-many class="org.hisp.dhis.indicator.Indicator" column="indicatorid"
        foreign-key="fk_indicatorgroup_indicatorid" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_indicatorgroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="indicatorgroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="indicatorgroupid" foreign-key="fk_indicatorgroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_indicatorgroup">
            <column name="usergroupaccessid" unique-key="uk_indicatorgroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="indicatorgroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="indicatorgroupid" foreign-key="fk_indicatorgroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_indicatorgroup">
            <column name="useraccessid" unique-key="uk_indicatorgroup_useraccessid"/>
 </many-to-many>
    </set>

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="indicatorgroupattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="indicatorgroupid" foreign-key="fk_indicatorgroup_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_indicatorgroup">
       <column name="attributevalueid" unique-key="uk_indicatorgroup_attributevalue"/>
     </many-to-many>
    </set>

    <join table="indicatorgroupsetmembers" inverse="true">
      <key column="indicatorgroupid" />
      <many-to-one column="indicatorgroupsetid" name="groupSet" />
    </join>

  </class>

</hibernate-mapping>
