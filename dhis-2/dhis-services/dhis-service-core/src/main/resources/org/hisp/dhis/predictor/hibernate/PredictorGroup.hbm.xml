<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "predictorgroup">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.predictor.PredictorGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="predictorgroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="translations" type="jblTranslations"/>

    <property name="description" type="text" />

    <set name="members" table="predictorgroupmembers">
      <cache usage="read-write" />
      <key column="predictorgroupid" foreign-key="fk_predictorgroupmembers_predictorgroupid" />
      <many-to-many class="org.hisp.dhis.predictor.Predictor" column="predictorid"
                    foreign-key="fk_predictorgroup_predictorid" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_predictorgroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="predictorgroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="predictorgroupid" foreign-key="fk_predictorgroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_predictorgroup">
            <column name="usergroupaccessid" unique-key="uk_predictorgroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="predictorgroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="predictorgroupid" foreign-key="fk_predictorgroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_predictorgroup">
            <column name="useraccessid" unique-key="uk_predictorgroup_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
