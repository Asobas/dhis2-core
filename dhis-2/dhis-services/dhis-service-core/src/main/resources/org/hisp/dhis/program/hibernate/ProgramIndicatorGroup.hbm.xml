<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "programindicatorgroup">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.program.ProgramIndicatorGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="programindicatorgroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique-key="uk_name_&tablename;" length="230" />
    <property name="description" column="description" type="text" />
    <property name="translations" type="jblTranslations"/>

    <set name="members" table="programindicatorgroupmembers">
      <cache usage="read-write" />
      <key column="programindicatorgroupid" foreign-key="fk_programindicatorgroupmembers_programindicatorgroupid" />
      <many-to-many class="org.hisp.dhis.program.ProgramIndicator" column="programindicatorid"
        foreign-key="fk_programindicatorgroup_programindicatorid" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_programindicatorgroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="programindicatorgroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="programindicatorgroupid" foreign-key="fk_programindicatorgroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_programindicatorgroup">
            <column name="usergroupaccessid" unique-key="uk_programindicatorgroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="programindicatorgroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="programindicatorgroupid" foreign-key="fk_programindicatorgroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_programindicatorgroup">
            <column name="useraccessid" unique-key="uk_programindicatorgroup_useraccessid"/>
 </many-to-many>
    </set>

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="programindicatorgroupattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="programindicatorgroupid" foreign-key="fk_programindicatorgroup_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_programindicatorgroup">
       <column name="attributevalueid" unique-key="uk_programindicatorgroup_attributevalue"/>
     </many-to-many>
    </set>

  </class>

</hibernate-mapping>

