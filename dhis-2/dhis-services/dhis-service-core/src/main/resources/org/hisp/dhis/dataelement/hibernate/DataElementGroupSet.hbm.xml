<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
  <!ENTITY tablename "dataelementgroupset">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.dataelement.DataElementGroupSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="dataelementgroupsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique-key="uk_name_&tablename;" length="230" />

    <property name="description" type="text" />

    <property name="compulsory" />

    <property name="dataDimension" column="datadimension" not-null="true" />

    <property name="translations" type="jblTranslations"/>

    <list name="members" table="dataelementgroupsetmembers">
      <cache usage="read-write" />
      <key column="dataelementgroupsetid" foreign-key="fk_dataelementgroupsetmembers_dataelementgroupsetid" />
      <list-index column="sort_order" base="1" />
      <many-to-many class="org.hisp.dhis.dataelement.DataElementGroup" column="dataelementgroupid"
        foreign-key="fk_dataelementgroupset_dataelementgroupid" />
    </list>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_dataelementgroupset_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="dataelementgroupsetusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupsetid" foreign-key="fk_dataelementgroupset_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_dataelementgroupset">
            <column name="usergroupaccessid" unique-key="uk_dataelementgroupset_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="dataelementgroupsetuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupsetid" foreign-key="fk_dataelementgroupset_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_dataelementgroupset">
            <column name="useraccessid" unique-key="uk_dataelementgroupset_useraccessid"/>
 </many-to-many>
    </set>

    <!-- Dynamic attribute values -->

   <set name="attributeValues" table="dataelementgroupsetattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupsetid" foreign-key="fk_dataelementgroupset_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_dataelementgroupset">
       <column name="attributevalueid" unique-key="uk_dataelementgroupset_attributevalue"/>
     </many-to-many>
    </set>

  </class>

</hibernate-mapping>
