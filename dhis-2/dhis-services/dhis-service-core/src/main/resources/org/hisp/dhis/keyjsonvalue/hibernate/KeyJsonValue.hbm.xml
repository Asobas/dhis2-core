<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
         <!ENTITY  tablename "keyjsonvalue">]>

<hibernate-mapping>
    <class name="org.hisp.dhis.keyjsonvalue.KeyJsonValue" table="&tablename;">

        <cache usage="read-write"/>

        <id name="id" column="keyjsonvalueid">
            <generator class="native"/>
        </id>
        &identifiableProperties;

        <property name="namespace" column="namespace" type="string" length="255" not-null="true" unique="true"/>

        <property name="key" column="namespacekey" type="string" length="255" not-null="true" unique="true" />

        <property name="jbPlainValue" type="jbPlainString" column="jbvalue" access="property" />

        <property name="encryptedValue" column="encrypted_value" type="Aes128EncryptedString" access="property" />

        <property name="encrypted" column="encrypted" type="boolean" />
        
         <!-- Access properties -->
        <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_keyjsonvalue_userid" />

        <property name="publicAccess" length="8" />

      <set name="userGroupAccesses" table="keyjsonvalueusergroupaccesses" cascade="all-delete-orphan">
          <cache usage="read-write" />
          <key column="keyjsonvalueid" foreign-key="fk_keyjsonvalue_usergroupaccessid" />
          <many-to-many class="org.hisp.dhis.user.UserGroupAccess">
            <column name="usergroupaccessid" unique-key="uk_keyjsonvalue_usergroupaccessid"/>
 </many-to-many>
        </set>

      <set name="userAccesses" table="keyjsonvalueuseraccesses" cascade="all-delete-orphan">
          <cache usage="read-write" />
          <key column="keyjsonvalueid" foreign-key="fk_keyjsonvalue_useraccessid" />
          <many-to-many class="org.hisp.dhis.user.UserAccess">
            <column name="useraccessid" unique-key="uk_keyjsonvalue_useraccessid"/>
 </many-to-many>
        </set>

    </class>
</hibernate-mapping>
