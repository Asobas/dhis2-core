<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "orgunitgroupset">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.organisationunit.OrganisationUnitGroupSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="orgunitgroupsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique-key="uk_name_&tablename;" length="230" />

    <property name="description" type="text" />

    <property name="compulsory" not-null="true" />

    <property name="includeSubhierarchyInAnalytics" not-null="false" />

    <property name="dataDimension" column="datadimension" not-null="true" />

    <property name="translations" type="jblTranslations"/>

    <set name="organisationUnitGroups" table="orgunitgroupsetmembers">
      <cache usage="read-write" />
      <key column="orgunitgroupsetid" foreign-key="fk_orgunitgroupsetmembers_orgunitgroupsetid" />
      <many-to-many class="org.hisp.dhis.organisationunit.OrganisationUnitGroup" column="orgunitgroupid"
        foreign-key="fk_orgunitgroupset_orgunitgroupid" />
    </set>

    <!-- Dynamic attribute values -->

   <set name="attributeValues" table="orgunitgroupsetattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="orgunitgroupsetid" foreign-key="fk_orgunitgroupset_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_orgunitgroupset">
       <column name="attributevalueid" unique-key="uk_orgunitgroupset_attributevalue"/>
     </many-to-many>
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_orgunitgroupset_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="orgunitgroupsetusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="orgunitgroupsetid" foreign-key="fk_orgunitgroupset_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_orgunitgroupset">
            <column name="usergroupaccessid" unique-key="uk_orgunitgroupset_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="orgunitgroupsetuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="orgunitgroupsetid" foreign-key="fk_orgunitgroupset_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_orgunitgroupset">
            <column name="useraccessid" unique-key="uk_orgunitgroupset_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
