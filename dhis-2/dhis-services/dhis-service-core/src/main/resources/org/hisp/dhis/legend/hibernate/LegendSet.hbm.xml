<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "maplegendset">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.legend.LegendSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="maplegendsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="symbolizer" column="symbolizer" />

    <set name="legends" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="maplegendsetid" />
      <one-to-many class="org.hisp.dhis.legend.Legend" />
    </set>

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="legendsetattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="legendsetid" foreign-key="fk_legendset_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_legendset">
       <column name="attributevalueid" unique-key="uk_legendset_attributevalue"/>
     </many-to-many>
    </set>

    <property name="translations" type="jblTranslations"/>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_legendset_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="legendsetusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="maplegendsetid" foreign-key="fk_maplegendset_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_maplegendset">
            <column name="usergroupaccessid" unique-key="uk_maplegendset_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="legendsetuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="maplegendsetid" foreign-key="fk_maplegendset_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_maplegendset">
            <column name="useraccessid" unique-key="uk_maplegendset_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
