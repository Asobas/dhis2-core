<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "relationshiptype">] 
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.relationship.RelationshipType" table="&tablename;">

        <cache usage="read-write"/>

        <id name="id" column="relationshiptypeid">
            <generator class="native"/>
        </id>
        &identifiableProperties;

        <property name="name" column="name" not-null="true" unique="true" length="230"/>

        <property name="description" column="description" not-null="false" />

        <property name="translations" type="jblTranslations"/>

        <many-to-one name="fromConstraint" class="org.hisp.dhis.relationship.RelationshipConstraint"
                     column="from_relationshipconstraintid"
                     foreign-key="fk_relationshiptype_from_relationshipconstraintid"
                     not-null="false"
                     unique="true"
                     cascade="all-delete-orphan"/>

        <many-to-one name="toConstraint" class="org.hisp.dhis.relationship.RelationshipConstraint"
                     column="to_relationshipconstraintid"
                     foreign-key="fk_relationshiptype_to_relationshipconstraintid"
                     not-null="false"
                     unique="true"
                     cascade="all-delete-orphan"/>

        <!-- Access properties -->
        <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_relationshiptype_userid" />

        <property name="publicAccess" length="8" />

      <set name="userGroupAccesses" table="relationshiptypeusergroupaccesses" cascade="all-delete-orphan">
            <cache usage="read-write" />
            <key column="relationshiptypeid" foreign-key="fk_relationshiptype_usergroupaccessid" />
            <many-to-many class="org.hisp.dhis.user.UserGroupAccess">
            <column name="usergroupaccessid" unique-key="uk_relationshiptype_usergroupaccessid"/>
 </many-to-many>
        </set>

      <set name="userAccesses" table="relationshiptypeuseraccesses" cascade="all-delete-orphan">
            <cache usage="read-write" />
            <key column="relationshiptypeid" foreign-key="fk_relationshiptype_useraccessid" />
            <many-to-many class="org.hisp.dhis.user.UserAccess">
            <column name="useraccessid" unique-key="uk_relationshiptype_useraccessid"/>
 </many-to-many>
        </set>

    </class>
</hibernate-mapping>
