<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
  <!ENTITY tablename "categorycombo">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.category.CategoryCombo" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="categorycomboid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="translations" type="jblTranslations"/>

    <list name="categories" table="categorycombos_categories">
      <cache usage="read-write" />
      <key column="categorycomboid" foreign-key="fk_categorycombos_categories_categorycomboid" />
      <list-index column="sort_order" base="1" />
      <many-to-many class="org.hisp.dhis.category.Category" column="categoryid"
        foreign-key="fk_categorycombo_categoryid" />
    </list>

    <set name="optionCombos" table="categorycombos_optioncombos" inverse="true">
      <cache usage="read-write" />
      <key column="categorycomboid" foreign-key="fk_categorycombos_optioncombos_categorycomboid" />
      <many-to-many class="org.hisp.dhis.category.CategoryOptionCombo" 
        foreign-key="fk_categorycombo_categoryoptioncomboid">
        <column name="categoryoptioncomboid" unique-key="uk_categorycombo_categoryoptioncomboid"/>
        </many-to-many>
    </set>

    <property name="dataDimensionType" column="datadimensiontype" type="org.hisp.dhis.common.DataDimensionTypeUserType" not-null="true" />

    <property name="skipTotal" column="skiptotal" not-null="true" />

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_categorycombo_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="categorycombousergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="categorycomboid" foreign-key="fk_categorycombo_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_categorycombo">
            <column name="usergroupaccessid" unique-key="uk_categorycombo_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="categorycombouseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="categorycomboid" foreign-key="fk_categorycombo_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_categorycombo">
            <column name="useraccessid" unique-key="uk_categorycombo_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
