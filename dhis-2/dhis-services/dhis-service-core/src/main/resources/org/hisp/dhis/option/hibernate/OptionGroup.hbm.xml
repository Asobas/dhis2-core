<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "optiongroup">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.option.OptionGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="optiongroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique-key="uk_name_&tablename;" length="230" />

    <property name="shortName" column="shortname" not-null="true" unique-key="uk_shortname_&tablename;" length="50" />

    <property name="translations" type="jblTranslations"/>

    <set name="members" table="optiongroupmembers">
      <cache usage="read-write" />
      <key column="optiongroupid" foreign-key="fk_optiongroupmembers_optionid" />
      <many-to-many class="org.hisp.dhis.option.Option" column="optionid"
        foreign-key="fk_optiongroupmembers_optiongroupid" />
    </set>

    <many-to-one name="optionSet" class="org.hisp.dhis.option.OptionSet" column="optionsetid" foreign-key="fk_optiongroup_optionsetid" />

    <!-- Dynamic attribute values -->

   <set name="attributeValues" table="optiongroupattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optiongroupid" foreign-key="fk_optiongroup_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_optiongroup">
       <column name="attributevalueid" unique-key="uk_optiongroup_attributevalue"/>
     </many-to-many>
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_optiongroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="optiongroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optiongroupid" foreign-key="fk_optiongroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_optiongroup">
            <column name="usergroupaccessid" unique-key="uk_optiongroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="optiongroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optiongroupid" foreign-key="fk_optiongroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_optiongroup">
            <column name="useraccessid" unique-key="uk_optiongroup_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
