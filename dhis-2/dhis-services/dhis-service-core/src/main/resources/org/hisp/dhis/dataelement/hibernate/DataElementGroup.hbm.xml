<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
  <!ENTITY tablename "dataelementgroup">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.dataelement.DataElementGroup" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="dataelementgroupid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="shortName" column="shortname" unique="true" length="50" />

    <property name="translations" type="jblTranslations"/>

    <set name="members" table="dataelementgroupmembers">
      <cache usage="read-write" />
      <key column="dataelementgroupid" foreign-key="fk_dataelementgroupmembers_dataelementgroupid" />
      <many-to-many class="org.hisp.dhis.dataelement.DataElement" column="dataelementid"
        foreign-key="fk_dataelementgroup_dataelementid" />
    </set>

    <set name="groupSets" table="dataelementgroupsetmembers" inverse="true">
      <cache usage="read-write" />
      <key column="dataelementgroupid" />
      <many-to-many class="org.hisp.dhis.dataelement.DataElementGroupSet" column="dataelementgroupsetid" />
    </set>

    <!-- Dynamic attribute values -->

   <set name="attributeValues" table="dataelementgroupattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupid" foreign-key="fk_dataelementgroup_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_dataelementgroup">
       <column name="attributevalueid" unique-key="uk_dataelementgroup_attributevalue"/>
     </many-to-many>
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_dataelementgroup_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="dataelementgroupusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupid" foreign-key="fk_dataelementgroup_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_dataelementgroup">
            <column name="usergroupaccessid" unique-key="uk_dataelementgroup_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="dataelementgroupuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="dataelementgroupid" foreign-key="fk_dataelementgroup_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_dataelementgroup">
            <column name="useraccessid" unique-key="uk_dataelementgroup_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
