<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
  <!ENTITY tablename "constant">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.constant.Constant" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="constantid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="shortName" column="shortname" unique="true" length="50" />

    <property name="description" type="text" />

    <property name="value" not-null="true" />

    <property name="translations" type="jblTranslations"/>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_constant_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="constantusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="constantid" foreign-key="fk_constant_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_constant">
            <column name="usergroupaccessid" unique-key="uk_constant_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="constantuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="constantid" foreign-key="fk_constant_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_constant">
            <column name="useraccessid" unique-key="uk_constant_useraccessid"/>
 </many-to-many>
    </set>

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="constantattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="constantid" foreign-key="fk_constant_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_constant">
       <column name="attributevalueid" unique-key="uk_constant_attributevalue"/>
     </many-to-many>
    </set>

  </class>

</hibernate-mapping>
