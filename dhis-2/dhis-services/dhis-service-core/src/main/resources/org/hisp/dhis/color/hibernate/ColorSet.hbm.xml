<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">
  <!ENTITY tablename "colorset">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.color.ColorSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="colorsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="translations" type="jblTranslations"/>

    <list name="colors" table="colorset_colors" cascade="all-delete-orphan">
      <key column="colorsetid" foreign-key="fk_colorset_colors_colorsetid" />
      <list-index column="sort_order" base="1" />
      <many-to-many class="org.hisp.dhis.color.Color" foreign-key="fk_colorset_colors_colorid">
        <column name="colorid" unique-key="uk_colorset_colors_colorid"/>
      </many-to-many>
    </list>

  </class>

</hibernate-mapping>
