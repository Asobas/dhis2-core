<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "indicatorgroupset">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.indicator.IndicatorGroupSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="indicatorgroupsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="false" length="230" />

    <property name="description" type="text" />

    <property name="compulsory" />

    <property name="translations" type="jblTranslations"/>

    <list name="members" table="indicatorgroupsetmembers">
      <cache usage="read-write" />
      <key column="indicatorgroupsetid" foreign-key="fk_indicatorgroupsetmembers_indicatorgroupsetid" />
      <list-index column="sort_order" base="1" />
      <many-to-many class="org.hisp.dhis.indicator.IndicatorGroup"
        foreign-key="fk_indicatorgroupset_indicatorgroupid" >
          <column name="indicatorgroupid" unique-key="uk_indicatorgroupset_indicatorgroupid"/>
       </many-to-many>
    </list>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_indicatorgroupset_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="indicatorgroupsetusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="indicatorgroupsetid" foreign-key="fk_indicatorgroupset_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_indicatorgroupset">
            <column name="usergroupaccessid" unique-key="uk_indicatorgroupset_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="indicatorgroupsetuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="indicatorgroupsetid" foreign-key="fk_indicatorgroupset_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_indicatorgroupset">
            <column name="useraccessid" unique-key="uk_indicatorgroupset_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
