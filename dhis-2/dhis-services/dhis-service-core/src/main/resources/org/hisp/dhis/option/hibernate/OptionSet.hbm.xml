<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [ <!ENTITY  identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm"> 
 <!ENTITY  tablename "optionset">] 
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.option.OptionSet" table="&tablename;">

    <cache usage="read-write" />

    <id name="id" column="optionsetid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique-key="uk_name_&tablename;" length="230" />

    <property name="translations" type="jblTranslations"/>

    <property name="valueType" length="50" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">org.hisp.dhis.common.ValueType</param>
        <param name="useNamed">true</param>
        <param name="type">12</param>
      </type>
    </property>

    <property name="version" />

    <list name="options" cascade="all">
      <cache usage="read-write" />
      <key column="optionsetid" foreign-key="fk_optionsetmembers_optionsetid" />
      <list-index column="sort_order" base="1" />
      <one-to-many class="org.hisp.dhis.option.Option" />
    </list>

    <!-- Dynamic attribute values -->
   <set name="attributeValues" table="optionsetattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optionsetid" foreign-key="fk_optionset_attributevalues"  />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" foreign-key="fk_attributevalue_optionset">
       <column name="attributevalueid" unique-key="uk_optionset_attributevalue"/>
     </many-to-many>
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_optionset_userid" />

    <property name="publicAccess" length="8" />

  <set name="userGroupAccesses" table="optionsetusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optionsetid" foreign-key="fk_optionset_usergroupaccessid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" foreign-key="fk_usergroupaccess_optionset">
            <column name="usergroupaccessid" unique-key="uk_optionset_usergroupaccessid"/>
 </many-to-many>
    </set>

  <set name="userAccesses" table="optionsetuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="optionsetid" foreign-key="fk_optionset_useraccessid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" foreign-key="fk_useraccess_optionset">
            <column name="useraccessid" unique-key="uk_optionset_useraccessid"/>
 </many-to-many>
    </set>

  </class>

</hibernate-mapping>
